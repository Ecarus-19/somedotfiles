# Basic settings

set autoquit true
set shell sh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set ignorecase true
set mouse true
set ratios '1:2'
set sixel true

# cmd/funcions

cmd mkdir $mkdir -p "$(echo $* | tr ' ' '\ ')"

#cmd setbg "$1"

cmd bulkrename $vidir

cmd open &{{
    case $(file --mime-type -Lb $f) in
        text/*) lf -remote "send $id \$$EDITOR \$fx";;
        *) for f in $fx; do $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}

cmd extract ${{
    clear; tput cup $(($(tput lines)/3)); tput bold
    set -f
    printf "%s\n\t" "$fx"
    printf "extract?[y/N]"
    read ans
    [ $ans = "y" ] && aunpack $fx
}}

cmd delete ${{
    clear; tput cup $(($(tput lines)/3)); tput bold
    set -f
    printf "%s\n\t" "$fx"
    printf "delete?[y/N]"
    read ans
    [ $ans = "y" ] && rm -rf -- $fx
}}

