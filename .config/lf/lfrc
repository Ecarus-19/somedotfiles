# Bindings

map <enter> shell

map ` !true

map b $setbg $f

# execute current file (must be executable)
map x $$f
map X !$f

map o &mimeopen $f
map O $mimeopen --ask $f

map <c-m> mkdir

map gg top
map <home> top
map K top
map GG bottom
map J bottom
map <end> bottom

# map H high
# map M middle
# map L low

map v invert
map u unselect
map C clear

map DD delete
map p paste
map y copy
map x cut

# map Dd trash
# map dr restore-trash

map E extract
# map C copyto
# map M moveto




# Rename

map A rename # at the very end
map c push A<c-u> # new rename
map I push A<c-a> # at the very beginning
map i push A<a-b><a-b><a-f> # before extension
map a push A<a-b> # after extension
map B bulkrename


# Shortcuts

map gd cd ~/Documents
map gD cd ~/Downloads
map gp cd ~/Pictures
map gc cd ~/.config
map gM cd /mnt
map gs cd ~/.local/bin
map gH cd ~
map gT cd ~/.local/share/Trash/files
